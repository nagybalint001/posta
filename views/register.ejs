<!-- Local includes -->
<% stylesheet('styles/local/login-form-elements.css') %>
<% stylesheet('styles/local/login-style.css') %>
<% script('js/local/login-scripts.js') %>

<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 mx-auto text">
                    <h1>Post <strong>IT</strong> Register</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 mx-auto form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Sign up to Post IT</h3>
                            <p>Enter your username and password to sing up:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="/api/user/create" method="post" class="login-form">
                            <div class="form-group">
                                <label class="sr-only" for="name">Username</label>
                                <input value="<%= (typeof name !== 'undefined') ? name : ''  %>" type="text" name="name" placeholder="Username..." class="form-username form-control" id="form-username" required>
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="fullname">Fullname</label>
                                <input value="<%= (typeof fullname !== 'undefined') ? fullname : ''  %>" type="text" name="fullname" placeholder="Fullname..." class="form-control" id="form-fullname" required>
							</div>
                            <div class="form-group">
                                <label class="sr-only" for="email">Email</label>
                                <input value="<%= (typeof email !== 'undefined') ? email : ''  %>" type="email" name="email" placeholder="Email..." class="form-control" id="form-email">
							</div>
                            <div class="form-group">
                                <label class="sr-only" for="phone">Phone</label>
                                <input value="<%= (typeof phone !== 'undefined') ? phone : ''  %>" type="tel" name="phone" placeholder="Phone..." class="form-control" id="form-phone">
							</div>
                            <div class="form-group">
                                <label class="sr-only" for="password">Password</label>
                                <input type="password" name="password" placeholder="Password..." class="form-password form-control" id="form-password" required>
							</div>
                            <button type="submit" class="btn">Sign up</button>
                            <p style="color:red; text-align:center;"><%= (typeof error !== 'undefined') ? error : '' %></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>