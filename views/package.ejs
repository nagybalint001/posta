<%- partial('tpl/nav') %>

    <div class="container">
        <div class="card p-5">
            <h1><%= __('Package') %></h1>        
            <br>  
            <form role="form" action="/package" method="post">
                <input name="creator" type="hidden" id="creator" value="<%= req.session.user.name %>">
                <div class="form-group row">
                    <label for="date" class="col-sm-2 col-form-label"><%= __('Date') %></label>
                    <div class="col-sm-10">
                        <input name="date" type="date" class="form-control" id="date">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="dir" class="col-sm-2 col-form-label"><%= __('Direction') %></label>
                    <div class="col-sm-10">
                        <label class="radio-inline">
                            <input class="mx-2" type="radio" name="dir" value="in" required>
                            <i class="fa fa-arrow-down" aria-hidden="true"></i>
                            <%= __('In') %>
                        </label>
                        <label class="radio-inline">
                            <input class="mx-2" type="radio" name="dir" value="out" required>
                            <i class="fa fa-arrow-up" aria-hidden="true"></i>
                            <%= __('Out') %>
                        </label>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="administrator" class="col-sm-2 col-form-label"><%= __('Administrator') %></label>
                    <div class="col-sm-10">
                        <select name="administrator" class="form-control" id="administrator">
                            <option>Máris Szomszéd</option>
                            <option>Mézga Aladár</option>
                            <option>Blöki</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="division" class="col-sm-2 col-form-label"><%= __('Division') %></label>
                    <div class="col-sm-10">
                        <select name="division" class="form-control" id="division" required>
                            <option>MZ/X</option>
                            <option>RX</option>
                            <option>DX</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="type" class="col-sm-2 col-form-label"><%= __('Type') %></label>
                    <div class="col-sm-10">
                        <input name="type" type="text" class="form-control" id="type" value="Üzenet" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="parcelNumber" class="col-sm-2 col-form-label"><%= __('Parcel number') %></label>
                    <div class="col-sm-10">
                        <input name="parcelNumber" type="text" class="form-control" id="typparcelNumbere">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="partner" class="col-sm-2 col-form-label"><%= __('Partner') %></label>
                    <div class="col-sm-10">
                        <input name="partner" type="text" class="form-control" id="partner" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="city" class="col-sm-2 col-form-label"><%= __('City') %></label>
                    <div class="col-sm-10">
                        <input name="city" type="text" class="form-control" id="city">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="zip" class="col-sm-2 col-form-label"><%= __('Zip code') %></label>
                    <div class="col-sm-10">
                        <input name="zip" type="string" class="form-control" id="zip">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="count" class="col-sm-2 col-form-label"><%= __('Count') %></label>
                    <div class="col-sm-10">
                        <input name="count" type="number" class="form-control" id="count">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="weight" class="col-sm-2 col-form-label"><%= __('Weight') %></label>
                    <div class="col-sm-10">
                        <input name="weight" type="number" class="form-control" id="weight">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="value" class="col-sm-2 col-form-label"><%= __('Value') %></label>
                    <div class="col-sm-10">
                        <input name="value" type="number" class="form-control" id="value">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="weightPrice" class="col-sm-2 col-form-label"><%= __('Weight price') %></label>
                    <div class="col-sm-10">
                        <input name="weightPrice" type="number" class="form-control" id="weightPrice">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="total" class="col-sm-2 col-form-label"><%= __('Total') %></label>
                    <div class="col-sm-10">
                        <input name="total" type="number" class="form-control" id="total">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="extraFee" class="col-sm-2 col-form-label"><%= __('Extra fee') %></label>
                    <div class="col-sm-10">
                        <input name="extraFee" type="number" class="form-control" id="extraFee">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="subject" class="col-sm-2 col-form-label"><%= __('Subject') %></label>
                    <div class="col-sm-10">
                        <input name="subject" type="text" class="form-control" id="subject" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="comment" class="col-sm-2 col-form-label"><%= __('Comment') %></label>
                    <div class="col-sm-10">
                        <input name="comment" type="text" class="form-control" id="comment">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary float-sm-right">
                    <i class="fa fa-plus"></i>
                    <%= __('Save') %>
                </button>
            </form>
        </div>
    </div>